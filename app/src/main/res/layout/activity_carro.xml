<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.CarroActivity"
    android:background="@color/grey"
    android:id="@+id/drawer_layout_car">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/carro_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/carro"
        />

    <TextView
        android:id="@+id/qualidade_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qualidade da gasolina: 30%"
        android:textAlignment="center"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/nivel_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nivel da gasolina: 45%"
        android:textAlignment="center"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/detritos_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detritos: 5%"
        android:textAlignment="center"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/alcool_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alcool: 13%"
        android:textAlignment="center"
        android:textSize="12pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/marca_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marca: Toyota"
            android:textAlignment="center"
            android:textSize="12pt" />

        <TextView
            android:id="@+id/modelo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modelo: Corola"
            android:textAlignment="center"
            android:textSize="12pt" />

        <TextView
            android:id="@+id/placa_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placa: PHI-1564"
            android:textAlignment="center"
            android:textSize="12pt" />
    </LinearLayout>
    </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_treino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:src="@drawable/ic_add_white"
            android:onClick="addCarro"/>
    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>